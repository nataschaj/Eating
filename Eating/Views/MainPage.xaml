<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Eating"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:ViewModel="using:Eating.ViewModel"
    x:Class="Eating.MainPage"
    mc:Ignorable="d">

    <Page.DataContext>
        <ViewModel:MainViewModel/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Rectangle Fill="#FF9D2D2C" HorizontalAlignment="Left" Height="67" Stroke="Black" VerticalAlignment="Top" Width="640"/>
        <TextBlock x:Name="Header" HorizontalAlignment="Left" Margin="241,10,0,0" TextWrapping="Wrap" Text="Ugens Menu" VerticalAlignment="Top" Height="41" Width="173" SelectionChanged="textBlock_SelectionChanged" TextAlignment="Center" FocusVisualPrimaryBrush="#FF060606" Foreground="White"/>


        <Button x:Name="Home" Content="Home" HorizontalAlignment="Left" Margin="0,931,0,0" VerticalAlignment="Top" Height="83" Width="213" Background="#FF9D2D2C" Foreground="White"/>
        <Button x:Name="Planlaeg" Content="Planlæg" HorizontalAlignment="Left" Margin="213,931,0,0" VerticalAlignment="Top" Height="83" Width="214" Background="#FF9D2D2C" Foreground="White">
            <Interactivity:Interaction.Behaviors>
                <Core:EventTriggerBehavior EventName="Click">
                    <Core:NavigateToPageAction TargetPage="Eating.Views.PlanlaegView"/>
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
        </Button>
        <Button x:Name="button" Content="Afregning" HorizontalAlignment="Left" Margin="427,931,0,0" VerticalAlignment="Top" Height="83" Width="213" Foreground="White" Background="#FF9D2D2C"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="186" Margin="212,67,0,0" VerticalAlignment="Top" Width="428" ItemsSource="{Binding PlanlaegListe}" RenderTransformOrigin="0.483,0.493" Background="#FFF1EFEF" Foreground="#FF9D2D2C"/>
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="186" Margin="0,67,0,0" Stroke="Black" VerticalAlignment="Top" Width="213"/>
        <TextBlock x:Name="Mandag" HorizontalAlignment="Left" Margin="10,133,0,0" TextWrapping="Wrap" Text="M" VerticalAlignment="Top" Width="203" TextAlignment="Center" FontSize="48" Foreground="#FF9D2D2C"/>
        <Button x:Name="TilMeldMandag" Content="Tilmeld" HorizontalAlignment="Left" Margin="374,277,0,0" VerticalAlignment="Top" Background="#FF9D2D2C" FocusVisualPrimaryBrush="White" Foreground="White"/>
       
    </Grid>
</Page>
